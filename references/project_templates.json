{
  "_meta": {
    "description": "Permission templates for different project types",
    "version": "1.0.0",
    "usage": "Automatically applied when project type is detected"
  },
  "rust": {
    "description": "Rust project with Cargo",
    "file_patterns": {
      "allow": [
        "Read",
        "Write(src/**.rs)",
        "Write(tests/**.rs)",
        "Write(benches/**.rs)",
        "Write(examples/**.rs)",
        "Write(Cargo.toml)",
        "Write(**.md)",
        "Edit(**.rs)",
        "Edit(Cargo.toml)"
      ],
      "deny": [
        "Write(target/**)",
        "Write(Cargo.lock)"
      ]
    },
    "commands": {
      "allow": [
        "Bash(cargo build)",
        "Bash(cargo test)",
        "Bash(cargo check)",
        "Bash(cargo run)",
        "Bash(cargo clean)",
        "Bash(cargo clippy)",
        "Bash(cargo fmt)",
        "Bash(cargo tree)"
      ],
      "deny": [
        "Bash(cargo publish)"
      ]
    }
  },
